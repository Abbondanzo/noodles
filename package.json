{
  "name": "noodles",
  "version": "1.0.0",
  "description": "Spicy noodle pictures",
  "main": "compile.js",
  "scripts": {
    "serve": "node ./scripts/serve.js",
    "build": "npm run build:sass && npm run build:pug && npm run build:assets",
    "build:assets": "rm -rf dist/assets && cp -a src/assets/. dist/assets",
    "build:pug": "node ./scripts/compile-pug.js",
    "build:sass": "node-sass src/styles/main.sass -o dist/styles --output-style compressed"
  },
  "author": "Peter Abbondanzo",
  "license": "MIT",
  "dependencies": {
    "node-sass": "^7.0.1",
    "pug": "3.0.2"
  },
  "devDependencies": {
    "node-static": "0.7.11"
  }
}
