{
  "name": "noodles",
  "version": "1.0.0",
  "description": "Spicy noodle pictures",
  "main": "compile.js",
  "scripts": {
    "serve": "node ./scripts/serve",
    "build": "npm run clean && npm run build:assets && npm run build:data && npm run build:sass && npm run build:html",
    "clean": "node ./scripts/clean",
    "build:assets": "node ./scripts/copy-assets",
    "build:data": "node ./scripts/generate-data.mjs",
    "build:html": "node ./scripts/compile-html.mjs",
    "build:sass": "node-sass src/styles/main.sass -o dist/styles --output-style compressed"
  },
  "author": "Peter Abbondanzo",
  "license": "MIT",
  "dependencies": {
    "node-sass": "^7.0.1",
    "pug": "3.0.2",
    "sharp": "0.30.2"
  },
  "devDependencies": {
    "node-static": "0.7.11"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
