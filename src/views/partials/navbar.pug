navbar#navbar
  .content
    .flex-container
      .logo
        a(href=`${baseURL}/`)
          include nood-logo.svg
      .links
        - 
          var pages = [
            {path: "/", name: "Home"},
            {path: "/categories", name: "Categories"},
            {path: "/noodstars", name: "Noodstars"},
            {path: "/community", name: "Community"},
          ]
        each page in pages
          a(href=`${baseURL}${page.path}`)
            .link#home(class={ "active": page.name === pageTitle })= page.name
      .cta
        a(href="https://github.com/Abbondanzo/noodles#how-to-add-data") Upload
